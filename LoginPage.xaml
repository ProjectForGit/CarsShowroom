<Page x:Class="CarsShowroom.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CarsShowroom"
      mc:Ignorable="d" 
      d:DesignHeight="1080" d:DesignWidth="1920"
      Title="LoginPage">

    <Grid Background="White">
        <TextBlock VerticalAlignment="Top" HorizontalAlignment="Center" TextAlignment="Center" FontSize="40" Margin="0,40,0,0">Авторизация</TextBlock>
        <TextBox x:Name="loginTxt" VerticalAlignment="Center" HorizontalAlignment="Center" Width="400" Height="40" FontSize="30" Margin="0,0,0,150">Логин</TextBox>
        <TextBox x:Name="passwordTxt" VerticalAlignment="Center" HorizontalAlignment="Center" Width="400" Height="40" FontSize="30" Margin="0,150,0,0">Пароль</TextBox>
        <Button VerticalAlignment="Bottom" HorizontalAlignment="Center"  Width="250" Height="60" FontSize="40" Margin="0,0,0,250" Background="Black" Foreground="White" Click="Button_Click">Войти</Button>
    </Grid>
</Page>
